generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuarios {
  id    String @id @default(uuid())
  nome  String
  email String @unique
  senha String
}

model produtos {
  id         String   @id @default(uuid())
  nome       String
  descricao  String
  preco      Float
  imagem     String   @db.Text
  quantidade Int
  tamanho    Tamanho  
  cor        Cor      
}

enum Tamanho {
  P
  M
  G
  GG
}

enum Cor {
  VERMELHO
  AZUL
  AMARELO
  VERDE
  PRETO
  BRANCO
  ROSA
}

